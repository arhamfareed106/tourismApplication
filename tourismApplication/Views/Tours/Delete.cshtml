@model tourismApplication.Models.Tour
@{
    ViewData["Title"] = "Delete Tour";
}

<h2>Delete Tour</h2>
<p>Are you sure you want to delete <strong>@Model.Title</strong>?</p>

<dl class="row">
    <dt class="col-sm-3">Dates</dt>
    <dd class="col-sm-9">@Model.AvailableFrom:yyyy-MM-dd – @Model.AvailableTo:yyyy-MM-dd</dd>
    <dt class="col-sm-3">Total Price</dt>
    <dd class="col-sm-9">@Model.Price</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="TourId" />
    <button class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model IEnumerable<tourismApplication.Models.Agency>

@{
    ViewData["Title"] = "Agencies";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Agencies</h2>
    <a class="btn btn-primary d-flex align-items-center" asp-action="Create">
        <i class="bi bi-plus-circle me-1"></i> Create Agency
    </a>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var a in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0 rounded-3" style="transition: transform 0.2s, box-shadow 0.2s;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">@a.Name</h5>

                    <div class="card-text mb-3" style="max-height: 8em; overflow-y: auto;">
                        @a.Description
                    </div>

                    <div class="mt-auto d-flex justify-content-around">
                        <a asp-action="Details" asp-route-id="@a.AgencyId" class="btn btn-sm btn-outline-primary d-flex align-items-center">
                            <i class="bi bi-eye me-1"></i> Details
                        </a>
                        <a asp-action="Edit" asp-route-id="@a.AgencyId" class="btn btn-sm btn-outline-success d-flex align-items-center">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@a.AgencyId" class="btn btn-sm btn-outline-danger d-flex align-items-center">
                            <i class="bi bi-trash me-1"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    /* Optional: make scrollbars nicer */
    .card-text::-webkit-scrollbar {
        width: 6px;
    }

    .card-text::-webkit-scrollbar-thumb {
        background-color: rgba(0,0,0,0.2);
        border-radius: 3px;
    }
</style>
